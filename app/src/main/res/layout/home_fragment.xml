<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/home_fragment_scene"
    android:background="@drawable/bg_gradient"
    tools:context=".ui.main.HomeFragment">

    <TextView
        android:id="@+id/tv_pathfinding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/pathfinding"
        android:textSize="24sp"
        android:textColor="@color/goldenrod"
        android:background="@drawable/light_circle_shape_bg" />

    <TextView
        android:id="@+id/tv_graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/graph"
        android:textSize="24sp"
        android:textColor="@color/goldenrod"
        android:background="@drawable/light_circle_shape_bg" />

    <TextView
        android:id="@+id/tv_ds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/data_structures"
        android:textSize="24sp"
        android:textColor="@color/goldenrod"
        android:background="@drawable/light_circle_shape_bg" />

    <TextView
        android:id="@+id/tv_search_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/searching_sorting"
        android:textSize="24sp"
        android:textColor="@color/goldenrod"
        android:background="@drawable/light_circle_shape_bg" />

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pacifico"
        android:text="@string/app_name"
        android:textSize="42sp"
        android:textColor="@color/royal_purple"
        app:layout_constraintBottom_toTopOf="@+id/tv_ds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.motion.widget.MotionLayout>